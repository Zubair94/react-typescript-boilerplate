{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types", "src/typings"
        ],
        "lib": [
            "esnext",
            "dom",
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
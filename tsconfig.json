{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "dom", "es6"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}